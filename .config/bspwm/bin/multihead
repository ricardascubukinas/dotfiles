#!/bin/zsh

# set up the two monitors for bspwm
# NOTE This is a simplistic approach because I already know the settings I
# want to apply.
external_monitor=$(xrandr --query | rg 'HDMI-0')
if [[ $external_monitor = *connected* ]]; then
    xrandr --output DP-4 --primary --mode 1920x1080 --rate 74.99 --rotate normal --output HDMI-0 --mode 1360x768 --rotate normal --right-of DP-4
else
    #xrandr -s 0
    xrandr --output DP-4 --primary --mode 1920x1080 --rate 74.99 --rotate normal
fi
